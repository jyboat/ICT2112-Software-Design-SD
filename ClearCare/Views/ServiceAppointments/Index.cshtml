@model List<Dictionary<string, object>>

@{
    ViewData["Title"] = "All Service Appointments";
}

<h2>All Service Appointments</h2>

<a href="" class="btn btn-primary">Manual Assign Appointment</a>
<a href="" class="btn btn-primary">Auto Assign Appointment</a>

@if (Model != null && Model.Count > 0)
{
    <table border="1">
        <thead>
            <tr>
                <th>Appointment ID</th>
                <th>Patient ID</th>
                <th>Nurse ID</th>
                <th>Doctor ID</th>
                <th>Service Type</th>
                <th>Status</th>
                <th>Date & Time</th>
                <th>Slot</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment["AppointmentId"]</td>
                    <td>@appointment["PatientId"]</td>
                    <td>@appointment["NurseId"]</td>
                    <td>@appointment["DoctorId"]</td>
                    <td>@appointment["ServiceTypeId"]</td>
                    <td>@appointment["Status"]</td>
                    <td>@Convert.ToDateTime(appointment["DateTime"]).ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@appointment["Slot"]</td>
                    <td>@appointment["Location"]</td>
                    <td>
                        <a href="/api/ServiceAppointments/Retrieve/@appointment["AppointmentId"]">Edit</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No appointments found.</p>
}


