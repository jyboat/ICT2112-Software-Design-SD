@model List<Dictionary<string, object>>

@{
    ViewData["Title"] = "Feedback List";
}

<section class="container">
    <h2>Submitted Feedback</h2>
    <div class="text-center mb-3">
        <a role="button" href="/Feedback/Submission" class="btn btn-md btn-success">Submit Feedback<i class="bi bi-plus ms-1"></i></a>
    </div>
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th>Date Created</th>
                <th>Content</th>
                <th>Rating</th>
                <th>Date Responded</th>
                <th>Response</th>
                @if (ViewBag.UserRole == "Doctor")
                {
                    <th>Patient ID</th>
                    <th>Doctor ID</th>
                    <th>Action</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <td class="align-middle">@feedback["DateCreated"]</td>
                    <td class="align-middle">@feedback["Content"]</td>
                    <td class="align-middle">@feedback["Rating"]</td>
                    <td class="align-middle">@feedback["DateResponded"]</td>
                    <td class="align-middle">@feedback["Response"]</td>
                    @if (ViewBag.UserRole == "Doctor")
                    {
                        <td class="align-middle">@feedback["PatientId"]</td>
                        <td class="align-middle">@feedback["DoctorId"]</td>
                        <td class="align-middle">
                            <a href="/Feedback/View/@feedback["Id"]" class="btn btn-sm btn-primary"><i class="bi bi-eye me-2"></i>View</a>
                            <a href="/Feedback/Edit/@feedback["Id"]" class="btn btn-sm btn-success"><i class="bi bi-pencil-square me-2"></i>Edit</a>
                            <a href="/Feedback/Response/@feedback["Id"]" class="btn btn-sm btn-success"><i class="bi bi-reply me-2"></i>Create/Edit Response</a>
                            <a href="#" class="btn btn-sm btn-danger btn-delete" data-id="@feedback["Id"]" data-target="#deleteModal" data-toggle="modal"><i class="bi bi-trash me-2"></i>Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</section>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Feedback</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete this feedback?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <input type="hidden" id="deleteId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-danger">Yes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        $('.btn-delete').click(function(){
            let feedbackId = $(this).data('id')
            $('#deleteId').val(feedbackId)
            $('#deleteForm').attr('action', '/Feedback/Delete/' + feedbackId)
            $('#deleteModal').modal('show')
        })
    })
</script>