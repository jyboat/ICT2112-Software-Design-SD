@using ClearCare.Models.Entities

@{
    ViewData["Title"] = "Audit Logs";
    var auditLogs = ViewData["AuditLogs"] as List<AuditLog>;
    var timestamp = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss"); // System timestamp
}

<!-- Success & Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="fw-bold mb-1">Audit Log Overview</h5>
            <small class="text-muted">Total Logs: @(auditLogs?.Count ?? 0)</small>
        </div>
    </div>

    <!-- Search Input -->
    <div class="d-flex flex-column flex-md-row gap-2 gap-md-0 justify-content-between mb-3">
        <div class="d-flex gap-2 flex-grow-1 me-md-3">
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0">
                    <i class="bi bi-search text-muted"></i>
                </span>
                <input type="text" id="searchInput" class="form-control border-start-0 ps-0"
                    placeholder="Search by action or user..." aria-label="Search logs">
            </div>
            <button type="button" class="btn btn-outline-secondary d-none" id="clearSearch">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered shadow-sm" id="auditTable">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-nowrap">Log ID</th>
                    <th scope="col">Action</th>
                    <th scope="col">Performed By</th>
                    <th scope="col">Entry Date</th>
                    <th scope="col" class="text-center">Details</th>
                </tr>
            </thead>
            <tbody>
                @if (auditLogs != null && auditLogs.Any())
                {
                    @foreach (var log in auditLogs)
                    {
                        <tr>
                            <td class="text-nowrap">@(log?.AuditLogID ?? "N/A")</td>
                            <td>@(log?.Action ?? "N/A")</td>
                            <td>@(log?.PerformedBy ?? "N/A")</td>
                            <td>@(log?.EntryDate != null ? log.EntryDate.ToDateTime().ToString("yyyy-MM-dd HH:mm:ss") : "N/A")</td>
                            <td class="text-center">
                                <button data-bs-toggle="modal" data-bs-target="#viewAuditModal_@log?.AuditLogID" class="btn btn-sm btn-outline-info px-3 py-1">
                                    <i class="bi bi-eye"></i> View
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-4">
                            <div class="text-muted">
                                <i class="bi bi-inbox fs-2 d-block mb-2"></i>
                                No audit logs found in the system
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (auditLogs != null && auditLogs.Any())
    {
        @foreach (var log in auditLogs)
        {
            <!-- Audit Log Details Modal -->
            <div class="modal fade" id="viewAuditModal_@log?.AuditLogID" tabindex="-1" aria-labelledby="auditModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0 shadow">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title" id="auditModalLabel">
                                <i class="bi bi-journal-text me-2"></i>Audit Log Details
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body p-4">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex px-0">
                                    <div class="me-3">
                                        <i class="bi bi-hash text-muted"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Log ID</small>
                                        <p class="mb-0">@log?.AuditLogID</p>
                                    </div>
                                </div>
                                
                                <div class="list-group-item d-flex px-0">
                                    <div class="me-3">
                                        <i class="bi bi-list text-muted"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Action</small>
                                        <p class="mb-0">@log?.Action</p>
                                    </div>
                                </div>

                                <div class="list-group-item d-flex px-0">
                                    <div class="me-3">
                                        <i class="bi bi-person text-muted"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Performed By</small>
                                        <p class="mb-0">@log?.PerformedBy</p>
                                    </div>
                                </div>

                                <div class="list-group-item d-flex px-0">
                                    <div class="me-3">
                                        <i class="bi bi-clock text-muted"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Entry Date</small>
                                        <p class="mb-0">@(log?.EntryDate != null ? log.EntryDate.ToDateTime().ToString("yyyy-MM-dd HH:mm:ss") : "N/A")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
