@using ClearCare.Models.Entities
@{
     ViewData["Title"] = "Manage User Accounts | Doctor";
     var user = ViewData["User"] as User;
}

@{
    string[] doctorSpecialization = {
        "Pre-Discharged", 
    };
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-gradient bg-primary text-white p-4">
                    <h2 class="text-center mb-0">Update Doctor Account</h2>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <span class="badge bg-info text-dark mb-2">Medical Doctor</span>
                    </div>

                    <div class="alert alert-warning text-center mb-4">
                        <strong>Disclaimer:</strong><br>Ensure all fields are filled correctly.
                    </div>
                    
                    <form method="post" action="/Admin/updateAccount">
                        <div class="mb-3" hidden>
                            <label for="role" class="form-label">Role:</label>
                            <select id="role" name="role" class="form-control" required>
                                <option value="Doctor">Doctor</option>
                            </select>
                        </div>
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="text" id="uid" name="uid" class="form-control bg-light" value="@(user?.getProfileData()["UserID"] ?? "N/A")" readonly>
                                    <label for="uid"><i class="bi bi-fingerprint me-1"></i>User ID</label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="email" id="email" name="email" class="form-control" value="@(user?.getProfileData()["Email"] ?? "N/A")" required>
                                    <label for="email"><i class="bi bi-envelope me-1"></i>Email</label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" id="name" name="name" class="form-control" value="@(user?.getProfileData()["Name"] ?? "N/A")" required>
                                    <label for="name"><i class="bi bi-person me-1"></i>Name</label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select id="specialization" name="specialization" class="form-control" required>
                                        <option value="">Select Specialization</option>
                                        @foreach (var specialty in doctorSpecialization)
                                        {
                                            <option value="@specialty" selected='@(user?.getProfileData()["Specialization"] == specialty ? "selected" : "")'>@specialty</option>
                                        }
                                    </select>
                                    <label for="specialization"><i class="bi bi-building me-1"></i>Specialization</label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="number" id="mobileNumber" name="mobileNumber" class="form-control" value="@(user?.getProfileData()["MobileNumber"] ?? "N/A")" required>
                                    <label for="mobileNumber"><i class="bi bi-telephone me-1"></i>Mobile Number</label>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="text" id="address" name="address" class="form-control" value="@(user?.getProfileData()["Address"] ?? "N/A")" required>
                                    <label for="address"><i class="bi bi-geo-alt me-1"></i>Address</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">
                                <i class="bi bi-check-circle me-2"></i>Update Account
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted p-3">
                    <small>ClearCare Medical Staff Management</small>
                </div>
            </div>
        </div>
    </div>
</div>