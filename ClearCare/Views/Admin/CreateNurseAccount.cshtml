@{
     ViewData["Title"] = "Create Nurse Account";
     string[] nursingDepartments = {
"Pre-discharge",
"General",
"Post-discharge"
};
}
<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1">
     <title>@ViewData["Title"] - ClearCare</title>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

     <style>
          /* Remove arrows from number input */
          input[type=number]::-webkit-inner-spin-button,
          input[type=number]::-webkit-outer-spin-button {
               -webkit-appearance: none;
               margin: 0;
          }

          input[type=number] {
               -moz-appearance: textfield;
          }
     </style>

     <script>
          document.addEventListener("DOMContentLoaded", function () {
               const nameInput = document.getElementById("name");

               nameInput.addEventListener("input", function () {
                    this.value = this.value.replace(/[^A-Za-z\s]/g, '');
               });
          });
     </script>
</head>

<div class="container py-4">
     <div class="row justify-content-center">
          <div class="col-md-8 col-lg-6">
               <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-gradient bg-primary text-white p-4">
                         <h2 class="text-center mb-0">Create Nurse Account</h2>
                    </div>
                    <div class="card-body p-4">
                         <div class="text-center mb-4">
                              <a href="/Admin/LoadCreateDoctorAccount"
                                   class="btn btn-secondary flex-grow-1 py-2 shadow-sm">
                                   Switch to Create Doctor Account </a>
                         </div>

                         <div class="alert alert-warning text-center mb-4">
                              <strong>Disclaimer:</strong><br>Ensure all fields are filled correctly.
                         </div>

                         <form method="post" action="/Admin/createAccount">
                              <div class="mb-3" hidden>
                                   <label for="role" class="form-label">Role:</label>
                                   <select id="role" name="role" class="form-control" required>
                                        <option value="Nurse">Nurse</option>
                                   </select>
                              </div>

                              <div class="row g-3">
                                   <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                             <input type="email" id="email" name="email" class="form-control" required>
                                             <label for="email"><i class="bi bi-envelope me-1"></i>Email</label>
                                        </div>
                                   </div>

                                   <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                             <input type="password" id="password" name="password" class="form-control"
                                                  required>
                                             <label for="password"><i class="bi bi-key me-1"></i>Password</label>
                                        </div>
                                   </div>

                                   <div class="col-12">
                                        <div class="form-floating mb-3">
                                             <input type="text" id="name" name="name" class="form-control" pattern="[A-Za-z\s]+" required>
                                             <label for="name"><i class="bi bi-person me-1"></i>Name</label>
                                        </div>
                                   </div>

                                   <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                             <select id="department" name="department" class="form-control" required>
                                                  <option value="">Select a Department</option>
                                                  @foreach (var department in nursingDepartments)
                                                  {
                                                       <option value="@department">@department</option>
                                                  }
                                             </select>
                                             <label for="department"><i
                                                       class="bi bi-building me-1"></i>Department</label>
                                        </div>
                                   </div>

                                   <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                             <input type="number" id="mobileNumber" name="mobileNumber"
                                                  class="form-control" required>
                                             <label for="mobileNumber"><i class="bi bi-telephone me-1"></i>Mobile
                                                  Number</label>
                                        </div>
                                   </div>

                                   <div class="col-12">
                                        <div class="form-floating mb-3">
                                             <input type="text" id="address" name="address" class="form-control"
                                                  required>
                                             <label for="address"><i class="bi bi-geo-alt me-1"></i>Address</label>
                                        </div>
                                   </div>
                              </div>

                              <div class="mt-4 d-flex gap-3">
                                   <a href="/Admin/Dashboard" class="btn btn-secondary flex-grow-1 py-2 shadow-sm">
                                        <i class="bi bi-arrow-left me-2"></i>Back to User List
                                   </a>
                                   <button type="submit" class="btn btn-primary flex-grow-1 py-2 shadow-sm">
                                        <i class="bi bi-check-circle me-2"></i>Create Account
                                   </button>
                              </div>
                         </form>
                    </div>
                    <div class="card-footer text-center text-muted p-3">
                         <small>ClearCare Medical Staff Management</small>
                    </div>
               </div>
          </div>
     </div>
</div>

</html>