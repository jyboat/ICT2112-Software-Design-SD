@using ClearCare.Models.Entities
@{
    ViewData["Title"] = "Manage User Accounts | Caregiver";
    var user = ViewData["User"] as User;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-gradient bg-primary text-white p-4">
                    <h2 class="text-center mb-0">Update Patient Account</h2>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <span class="badge bg-info text-dark mb-2">Patient Account</span>
                    </div>

                    <div class="alert alert-warning text-center mb-4">
                        <strong>Disclaimer:</strong><br>Ensure all fields are filled correctly.
                    </div>
                    
                    <form method="post" action="/Admin/updateAccount">
                        <input type="hidden" name="uid" value="@(user?.getProfileData()["UserID"] ?? "")" />
                        <input type="hidden" name="role" value="Caregiver" />

                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="text" id="uid" class="form-control bg-light" 
                                        value="@(user?.getProfileData()["UserID"] ?? "N/A")" 
                                        readonly>
                                    <label for="uid"><i class="bi bi-fingerprint me-1"></i>User ID</label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="email" id="email" name="email" class="form-control" 
                                        value="@(user?.getProfileData()["Email"] ?? "")" 
                                        required>
                                    <label for="email"><i class="bi bi-envelope me-1"></i>Email</label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" id="name" name="name" class="form-control" 
                                        value="@(user?.getProfileData()["Name"] ?? "")" 
                                        required>
                                    <label for="name"><i class="bi bi-person me-1"></i>Name</label>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="number" id="mobileNumber" name="mobileNumber" class="form-control" 
                                        value="@(user?.getProfileData()["MobileNumber"] ?? "")" 
                                        required>
                                    <label for="mobileNumber"><i class="bi bi-telephone me-1"></i>Mobile Number</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" id="assignedCaregiverName" name="assignedCaregiverName" class="form-control" 
                                        value="@(user?.getProfileData()["AssignedCaregiverName"] ?? "")" 
                                        disabled>
                                    <label for="assignedCaregiverName"><i class="bi bi-building me-1"></i>Assigned Caregiver</label>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="text" id="address" name="address" class="form-control" 
                                        value="@(user?.getProfileData()["Address"] ?? "")" 
                                        required>
                                    <label for="address"><i class="bi bi-geo-alt me-1"></i>Address</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">
                                <i class="bi bi-check-circle me-2"></i>Update Account
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted p-3">
                    <small>ClearCare User Account Management</small>
                </div>
            </div>
        </div>
    </div>
</div>