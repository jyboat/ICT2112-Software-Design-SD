@using System.Globalization
@model IEnumerable<ClearCare.Models.Entities.M3T1.ConsultationSession>

@{
    ViewData["Title"] = "Consultation Sessions";
    var query = Context.Request.Query;
}


<section class="container consultations">
    @if (TempData["FlashMsg"] != null)
    {
        <div role="alert" class="alert alert-danger d-flex align-items-center gap-3">
            <i class="bi bi-exclamation-octagon" aria-hidden="true"></i>
            @(TempData["FlashMsg"])
        </div>
    }
    <h2>Consultation Sessions</h2>
    @if (ViewBag.UserRole == "Caregiver" || ViewBag.UserRole == "Doctor")
    {
        <div class="text-center mb-3">
            <a role="button" href="/Consultation/Submission" class="btn btn-md btn-success">Submit new Session<i
                    class="bi bi-plus ms-1"></i></a>
        </div>
    }

    <!-- User Controls -->
    <form id="filterForm" method="get" class="mb-4">
        <input type="hidden" name="page" id="pageInput" value="@ViewBag.CurrentPage"/>

        <div class="row g-2 align-items-center">
            <!-- Search -->
            <div class="col-md-4">
                <input type="text" name="search" id="searchInput" value="@query["search"]" class="form-control"
                       placeholder="Search session..."/>
            </div>

            <!-- Completion Filter -->
            <div class="col-md-2">
                <select name="isCompleted" id="isCompleted" class="form-select">
                    <option value="All" selected="@(query["isCompleted"] == "All")">All</option>
                    <option value="Complete" selected="@(query["isCompleted"] == "Complete")">Completed</option>
                    <option value="Incomplete" selected="@(query["isCompleted"] == "Incomplete")">Incomplete</option>
                </select>
            </div>

            <!-- Page Size -->
            <div class="col-md-2">
                <select name="pageSize" id="pageSize" class="form-select">
                    <option value="10" selected="@(ViewBag.PageSize == 10)">10 per page</option>
                    <option value="25" selected="@(ViewBag.PageSize == 25)">25 per page</option>
                    <option value="50" selected="@(ViewBag.PageSize == 50)">50 per page</option>
                    <option value="100" selected="@(ViewBag.PageSize == 100)">100 per page</option>
                </select>
            </div>

            <!-- Reset -->
            <div class="col d-flex gap-2 align-items-baseline">
                <input type="submit" value="Search" class="btn btn-primary"/>
                <a href="/Consultation" class="btn btn-outline-dark"><i class="bi bi-arrow-clockwise me-2"></i>Reset
                    Filters</a>
            </div>
        </div>
    </form>

    <div class="row gap-4">
        @if (Model.Any())
        {
            @foreach (var session in Model)
            {
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="m-0">@session.Timing.ToDateTime().ToString(CultureInfo.CurrentUICulture)</h5>

                            <div class="d-flex align-items-center">
                                <span class="text-muted small me-3">
                                    <i class="bi bi-clock me-1"></i>
                                    @(session.Completed ? "Completed" : "Not Completed")
                                </span>
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="card-text">@session.Notes</p>
                        </div>

                        <div class="card-footer d-flex justify-content-end gap-3">
                            @if (!string.IsNullOrWhiteSpace(session.ZoomLink))
                            {
                                <a href="@(session.ZoomLink)" class="btn btn-primary">
                                    <i class="bi bi-camera-video me-1" aria-hidden="true"></i>
                                    Join Session
                                </a>
                            }
                            @if (!string.IsNullOrWhiteSpace(session.Id))
                            {
                                <a asp-controller="Consultation" asp-action="viewConsultation"
                                   asp-route-consultationId="@(session.Id)" class="btn btn-outline-secondary">
                                    <i class="bi bi-card-text me-1" aria-hidden="true"></i>
                                    View Details
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning d-flex align-items-center gap-3" role="alert">
                    <i class="bi bi-info-circle fs-5" aria-hidden="true"></i>
                    <span>No results found</span>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="d-flex justify-content-center mt-4">
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="#">Previous</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="#">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            }
        </ul>
    </nav>
</section>
