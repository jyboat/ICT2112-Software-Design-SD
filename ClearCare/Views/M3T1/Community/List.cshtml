@model ClearCare.Models.ViewModels.M3T1.CommunityViewModel

@{
    ViewData["Title"] = "Community Hub";
    var myGroups = Model.UserGroups;
    var posts = Model.Posts;
    var groups = Model.AllGroups;
    var userPosts = Model.UserPosts;
    bool groupView = Model.GroupView;
    var selectedGroup = Model.Group;
    var memberList = Model.GroupMembers;
    var userId = "1";
}

<section class="container community">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="modal" data-bs-target="#joinGroupModal">
                    <i class="bi bi-people me-1"></i>Join a Group
                </a>
                <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="modal" data-bs-target="#addGroupModal">
                    <i class="bi bi-person-add me-1"></i>Create a new Group
                </a>
            </div>

            <div class="dropdown mt-2">
                <button class="btn btn-outline-primary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-folder me-1"></i>My Groups
                </button>
                <ul class="dropdown-menu w-100">
                    @if (myGroups != null && myGroups.Any())
                    {
                        @foreach (var group in myGroups)
                        {
                            <li>
                                <a class="dropdown-item" href="/Community/Group/@group["Id"]">
                                    @group["Name"]
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li><span class="dropdown-item text-muted">No groups joined</span></li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-9">

            @if (groupView && selectedGroup != null){
                <div class="d-flex align-items-center mb-2">
                    <h2>@selectedGroup["Name"]</h2>
                    @if (selectedGroup["CreatedBy"].ToString() == userId){ // Change to user id
                        <a class="btn btn-sm btn-success ms-2" href="#" data-bs-toggle="modal" data-bs-target="#editGroupModal">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#removeMemberModal">
                            <i class="bi bi-person-dash me-1"></i>Remove a Member
                        </a>
                    }
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <p class="mb-0">@selectedGroup["Description"]</p>
                    <span class="text-muted small ms-2">
                        Created at:<i class="bi bi-clock ms-2 me-1"></i>@selectedGroup["CreationDate"]
                    </span>
                </div>

                <hr class="w-100" />
            }
            else{
                <h2 class="mb-2">Community Posts</h2>
            }

            <div class="card mb-2 mt-2 p-3">
                <h5 class="card-title mb-3">What's on your mind?</h5>
                <div class="card-body">
                    <form method="post" action="/Community/Post/Create">
                        @if (groupView && selectedGroup != null){
                            <input type="hidden" value="@selectedGroup["Id"]" name="groupId" />
                        }
                        <input type="hidden" value="@userId" name="userId" />
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" id="title" name="title" class="form-control w-100" required />
                        </div>
                        <div class="form-group mt-2">
                            <label for="content">Content</label>
                            <textarea rows="4" id="content" name="content" class="form-control w-100" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-success btn-sm w-100 mt-3">Post</button>
                    </form>
                </div>
            </div>
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs mb-3" id="postsTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-posts-tab" data-bs-toggle="tab" data-bs-target="#all-posts" type="button" role="tab">
                        All Posts
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="my-posts-tab" data-bs-toggle="tab" data-bs-target="#my-posts" type="button" role="tab">
                        My Posts
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                <!-- All Posts -->
                <div class="tab-pane fade show active" id="all-posts" role="tabpanel">
                    @if (posts != null && posts.Any())
                    {
                        @foreach (var post in posts)
                        {
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">@post["Title"]</h5>
                                    <hr class="w-100" />

                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="card-subtitle text-muted"><span class="fst-italic me-1">Posted By:</span>@post["PostedBy"]</h6>
                                        <span class="text-muted small me-3">
                                            <i class="bi bi-clock me-1"></i>@post["PostedAt"]
                                        </span>
                                    </div>

                                    <hr class="w-100" />

                                    <p class="card-text mt-2">@post["Content"]</p>

                                    <a class="btn btn-outline-primary btn-sm w-100" href="/Community/Post/@post["Id"]">
                                        View Post
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No posts available.</p>
                    }
                </div>

                <!-- My Posts -->
                <div class="tab-pane fade" id="my-posts" role="tabpanel">
                    @if (userPosts != null && userPosts.Any())
                    {
                        @foreach (var post in userPosts)
                        {
                            <div class="card mb-4">
                                <div class="card-body">
                                    <form method="post" action="/Community/Post/Edit">
                                        <input type="hidden" name="postId" value="@post["Id"]" />

                                        <h5 class="card-title">
                                            <input type="text" name="title" value="@post["Title"]" class="form-control mb-2" required />
                                        </h5>
                                        <hr class="w-100" />

                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="card-subtitle text-muted">
                                                <span class="fst-italic me-1">Posted By:</span>You
                                            </h6>
                                            <span class="text-muted small me-3">
                                                <i class="bi bi-clock me-1"></i>@post["PostedAt"]
                                            </span>
                                        </div>

                                        <hr class="w-100" />

                                        <div class="form-group mt-2">
                                            <textarea rows="4" name="content" class="form-control w-100" required>@post["Content"]</textarea>
                                        </div>

                                        <div class="mt-3">
                                            <button type="submit" class="btn btn-success btn-sm w-100">Save Changes</button>
                                        </div>
                                        <button type="submit" formaction="/Community/Post/Delete"
                                                formmethod="post" class="btn btn-danger btn-sm mt-3 w-100">
                                            Delete Post
                                        </button>
                                    </form>

                                    <hr class="w-100" />
                                    <a class="btn btn-outline-primary btn-sm w-100" href="/Community/Post/@post["Id"]">
                                        View Post
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">You haven't posted anything yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="joinGroupModal" tabindex="-1" aria-labelledby="joinGroupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Join a Group</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Search Bar -->
                <input type="text" id="searchGroups" class="form-control mb-3" placeholder="Search groups...">

                <!-- Groups List -->
                <div id="groupList">
                    @if (groups != null && groups.Any())
                    {
                        @foreach (var group in groups)
                        {
                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom groups" data-name="@group["Name"]">
                                <span>@group["Name"]</span>
                                <form method="post" action="/Community/Group/Join">
                                    @* @Html.AntiForgeryToken() <!-- CSRF Protection --> *@
                                    <input type="hidden" name="groupId" value="@group["Id"]" />
                                    <button type="submit" class="btn btn-success btn-sm">Join</button>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No available groups.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addGroupModal" tabindex="-1" aria-labelledby="addGroupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create a new Group</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form action="/Community/Group/Create" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control w-100" required />
                    </div>
                    <div class="form-group mt-2">
                        <label for="desc">Description</label>
                        <textarea rows="3" id="desc" name="description" class="form-control w-100" required></textarea>
                    </div>
                    <input type="hidden" name="userId" id="userId" value="@userId" required />

                    <button type="submit" class="btn btn-success btn-sm w-100 mt-3">Create Group</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (groupView && selectedGroup != null && selectedGroup["CreatedBy"].ToString() == userId)
{
    <div class="modal fade" id="editGroupModal" tabindex="-1" aria-labelledby="editGroupModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Group Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/Community/Group/Edit" method="post">
                        <input type="hidden" value="@selectedGroup["Id"]" name="groupId" />
                        <div class="form-group">
                            <label for="groupName">Name</label>
                            <input type="text" id="groupName" class="form-control w-100" required name="name" value="@selectedGroup["Name"]" />
                        </div>
                        <div class="form-group mt-2">
                            <label for="groupDesc">Description</label>
                            <textarea rows="3" id="groupDesc" class="form-control w-100" required name="description">@selectedGroup["Description"]</textarea>
                        </div>

                        <button type="submit" class="btn btn-success btn-sm w-100 mt-3">Update Group</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="removeMemberModal" tabindex="-1" aria-labelledby="removeMemberModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Choose members to remove</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/Community/Group/Member/Remove" method="post">
                        <input type="hidden" value="@selectedGroup["Id"]" name="groupId" />
                        @foreach (var memberId in memberList)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="selectedMembers" value="@memberId" id="member_@memberId">
                                <label class="form-check-label" for="member_@memberId">Member ID: @memberId</label>
                            </div>
                        }

                        <button type="submit" class="btn btn-danger btn-sm w-100 mt-3">Remove</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<script>
    // Simple search filter for groups
    $(document).ready(function () {
        // Simple search filter for groups
        $("#searchGroups").on("keyup", function () {
            let groupDivs = $(".groups")
            let input = $("#searchGroups").val()
            let filter = input.toUpperCase()

            for (let i = 0, n = groupDivs.length; i < n; i++){
                let focus = $(groupDivs[i])
                let compare = $(focus).data("name")

                if (compare.toUpperCase().includes(filter)){
                    if ($(focus).hasClass('d-none')) {
                        $(focus).removeClass('d-none');
                        $(focus).fadeIn(500, function() {
                            let _this = $(this);

                            _this.addClass('d-flex');
                        });
                    }
                }
                else {
                    if (!$(focus).hasClass('d-none')){
                        $(focus).fadeOut(500, function(){
                            let _this = $(this);

                            _this.removeClass('d-flex');
                            _this.addClass('d-none');
                        })
                    }
                }
            }
        });
    });
</script>