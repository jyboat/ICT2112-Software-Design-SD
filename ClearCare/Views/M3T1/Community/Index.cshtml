@model Dictionary<string, object>
@{
    ViewData["Title"] = "Viewing Post";
    var post = Model;
}

<section class="container post">
    <a href="/Community" class="btn btn-outline-secondary btn-sm mb-3">
        <i class="bi bi-arrow-left"></i> Back
    </a>
    <div class="card mb-4">
        <div class="card-body">

            <h2 class="card-title">@post["Title"]</h2>
            <hr class="w-100" />

            <div class="d-flex justify-content-between align-items-center">
                <h6 class="card-subtitle text-muted"><span class="fst-italic me-1">Posted By:</span>Name of user</h6>
                <span class="text-muted small me-3">
                    <i class="bi bi-clock me-1"></i>@post["PostedAt"]
                </span>
            </div>

            <hr class="w-100" />

            <p class="card-text mt-2">@post["Content"]</p>

            <hr class="w-100" />

            <h3>Comments</h3>

            <div class="mt-3">
                <form method="post" action="/Community/Comment/Create">
                    <input type="hidden" value="@post["Id"]" name="postId" />
                    <div class="form-group mb-2">
                        <label for="content">Leave a Comment!</label>
                        <textarea id="content" name="content" class="form-control w-100" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success btn-sm w-100 mb-2">Comment</button>
                </form>
                <hr class="w-100" />
                <div class="border p-3">
                    @if (post.ContainsKey("Comments") && post["Comments"] is List<Dictionary<string, object>> comments && comments.Any())
                    {
                        @foreach (var comment in comments)
                        {
                            if (comment["CreatedBy"].ToString() == "1"){ // Replace with current user id
                                <form method="post" action="/Community/Comment/Edit">
                                    <input type="hidden" name="commentId" value="@comment["Id"]" />
                                    <input type="hidden" name="postId" value="@post["Id"]" />

                                    <div class="form-group">
                                        <textarea name="content" class="form-control w-100">@comment["Content"]</textarea>
                                    </div>

                                    <div class="d-flex gap-2 mt-2">
                                        <button type="submit" class="btn btn-success btn-sm">Save</button>

                                        <button type="submit" formaction="/Community/Comment/Delete"
                                                formmethod="post" class="btn btn-danger btn-sm">
                                            Delete
                                        </button>
                                    </div>
                                </form>
                            }
                            else{
                                <div class="mb-2 d-flex justify-content-between align-items-center">
                                    <strong>Username says: @comment["Content"]</strong>
                                    <span class="text-muted small me-3">
                                        <i class="bi bi-clock me-1"></i>@comment["CreatedAt"]
                                    </span>
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <p class="text-muted">No comments yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


