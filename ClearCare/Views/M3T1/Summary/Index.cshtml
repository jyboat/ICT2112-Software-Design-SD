@model ClearCare.Models.DTO.M3T1.SummaryDTO

@{
    ViewData["Title"] = "View Summary";
    var summary = Model.Summary.GetSummaryDetails();
    var assessment = Model.Assessment != null ? Model.Assessment.getAssessmentDetails() : null;
    var prescription = Model.Prescription;
}

<div class="container view-summary">
    <div class="card shadow p-4">
        <h2 class="text-info mb-3">Discharge Summary for @summary["PatientId"]</h2>
            <div class="table-responsive">
                <table class="table table-bordered summary-table">
                    <tbody>
                        <tr>
                            <th>Patient ID</th>
                            <td>
                            @summary["PatientId"]
                            </td>
                        </tr>
                        <tr>
                            <th>Date of Discharge:</th>
                            <td>@summary["CreatedAt"]</td>
                        </tr>
                        <tr>
                            <th>Procedures and Details</th>
                            <td>
                            @summary["Details"]
                            </td>
                        </tr>
                        <tr>
                            <th>Prescriptions</th>
                            <td>
                                @if (@prescription != null){
                                    <ul>
                                    @foreach (var drug in @prescription.Medications)
                                    {
                                        <li>@drug.DrugName - @drug.Dosage</li>
                                    }
                                </ul>
                                }
                                else{
                                    <p>No prescriptions</p>
                                }

                             
                             </td>
                        </tr>
                        <tr>
                            <th>Follow-up instructions:</th>
                            <td>
                            @summary["Instructions"]
                            </td>
                        </tr>
                        <tr>
                            <th>Home assessment recommendations:</th>
                            @if (assessment != null){
                            <td>
                                @assessment["Recommendation"]
                            </td>
                            }
                            else{
                            <td>
                                None added
                            </td>
                            }

                        </tr>
                        <tr>
                            <th>Assessment checklist:</th>
                            @if (assessment != null){
                            <td>
                                @if (assessment.ContainsKey("HomeAssessmentChecklist") && assessment["HomeAssessmentChecklist"] is Dictionary<string, bool> checklist)
                                {
                                    <ul>
                                        @foreach (var item in checklist)
                                        {
                                            <li>
                                                @item.Key: <strong>@(item.Value ? "Yes" : "No")</strong>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p>None to show</p>
                                }
                            </td>
                            }
                            else{
                                <td>
                                    None added
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
    </div>
</div>