@model ClearCare.Models.Entities.M3T1.Feedback

@{
    ViewData["Title"] = "Respond to Feedback";
    var feedback = Model.GetFeedbackDetails();
}

<div class="container response">
    <div class="card shadow p-4">
        <h2 class="text-info mb-3">Responding to Feedback</h2>
        <form action="/Feedback/Response/@feedback["Id"]" method="post">
            <div class="table-responsive">
                <table class="table table-bordered feedback-table">
                    <tbody>
                        <tr>
                            <th>Content:</th>
                            <td>@feedback["Content"]</td>
                        </tr>
                        <tr>
                            <th>Rating:</th>
                            <td>@feedback["Rating"]</td>
                        </tr>
                        <tr>
                            <th>Response:</th>
                            <td>
                                <textarea name="response" class="form-control" required>@feedback["Response"]</textarea>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100">Submit Response</button>
            </div>
        </form>
    </div>
</div>