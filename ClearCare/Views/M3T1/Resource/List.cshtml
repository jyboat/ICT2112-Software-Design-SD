@{
    ViewData["Title"] = "Resource List";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<section class="container resources">
    <h2>Resources</h2>
    @if (true){ // If user is doctor
        <div class="text-center">
            <a href="@Url.Action("Add", "Resource")" class="btn btn-success btn-md"><i class="bi bi-plus ms-1"></i>Add New Resource</a>
        </div>
    }
    <div class="row">
        @foreach (var resource in Model){
            <div class="col-12 col-md-4 col-lg-3 d-flex align-items-stretch mt-4">
                <div class="card w-100">
                    <img loading="lazy" class="card-img-top" src="@resource["ImageSrc"]" onerror="this.src='@Url.Content("~/img/default.jpg")'" alt="@resource["Title"]" />
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0">@resource["Title"]</h4>

                            @if (resource["UploadedBy"] == resource["UploadedBy"]) // If current user = id of one uploaded (CHANGE THIS)
                            {
                                <a class="btn btn-sm btn-success" href="/Resource/Edit/@resource["Id"]">
                                    <i class="bi bi-pencil-square me-1"></i> Edit
                                </a>
                            }

                        </div>

                        <div class="d-flex align-items-center mt-2">
                            <span class="text-muted small">
                                <i class="bi bi-clock me-1"></i> @resource["DateCreated"]
                            </span>
                        </div>

                        <hr class="w-100" />

                        <div class="flex-fill">
                            <p class="card-text">
                                @resource["Description"]
                            </p>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@(resource["Url"])" class="btn btn-sm btn-primary w-100">Learn more</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>