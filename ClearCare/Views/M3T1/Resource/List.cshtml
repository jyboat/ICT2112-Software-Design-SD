@{
    ViewData["Title"] = "Resource List";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<section class="container resources">
    <h2>Resources</h2>
    @if (true)
    { // If user is doctor
      <div class="text-center">
          <a href="@Url.Action("Add", "Resource")" class="btn btn-success btn-md"><i class="bi bi-plus ms-1"></i>Add New
              Resource</a>
      </div>
    }
    <div class="row">
        @foreach (var resource in Model)
        {
            <div class="col-12 col-md-4 col-lg-3 d-flex align-items-stretch mt-4">
                <div class="card w-100">
                    <img loading="lazy" class="card-img-top" src="@resource["ImageSrc"]"
                        onerror="this.src='@Url.Content("~/img/default.jpg")'" alt="@resource["Title"]" />
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0">@resource["Title"]</h4>

                            @if (resource["UploadedBy"] == resource["UploadedBy"]) // If current user = id of one uploaded (CHANGE THIS)
                               
                        {
                        <div class="d-flex gap-2">
        <a class="btn btn-sm btn-success" href="/Resource/Edit/@resource["Id"]">
            <i class="bi bi-pencil-square me-1"></i> Edit
        </a>

        <form asp-action="Delete" asp-controller="Resource" method="post" asp-route-resourceId="@resource["Id"]" onsubmit="return confirm('Are you sure you want to delete this resource?');">
            <button type="submit" class="btn btn-sm btn-danger">
                <i class="bi bi-trash me-1"></i> Delete
            </button>
        </form>
    </div>
                        }

                    </div>

                    <div class="d-flex align-items-center mt-2">
                        <span class="text-muted small">
                            <i class="bi bi-clock me-1"></i> @resource["DateCreated"]
                        </span>
                    </div>

                    <hr class="w-100" />

                    <div class="flex-fill">
                        <p class="card-text">
                            @resource["Description"]
                        </p>
                    </div>
                </div>
                <div class="card-footer text-center">
                    @if (resource["Url"] != null)
{
    var url = resource["Url"].ToString().ToLower();

    if (url.StartsWith("/videos/") && url.EndsWith(".mp4"))
    {
        <!-- Video resource button -->
       <a href="#" class="btn btn-sm btn-primary w-100"
   onclick="openVideoModal('@resource["Url"]'); return false;">
   View video
</a>

    }
    else
    {
        <!-- Article or other resource button -->
        <a href="@resource["Url"]" class="btn btn-sm btn-primary w-100" target="_blank">Learn more</a>
    }
}


                    </div>

                </div>
            </div>
        }
    </div>
</section>

<!-- Video Modal -->
<div id="videoModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Video Player</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <video id="modalVideo" width="100%" height="auto" controls>
                    <source id="modalVideoSource" src="" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function openVideoModal(videoUrl) {
        const video = document.getElementById("modalVideo");
        const source = document.getElementById("modalVideoSource");
        source.src = videoUrl;
        video.load();

        const modal = new bootstrap.Modal(document.getElementById('videoModal'));
        modal.show();
    }
</script>
}