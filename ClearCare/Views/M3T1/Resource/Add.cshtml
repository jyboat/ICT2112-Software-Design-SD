@{
    ViewData["Title"] = "Add Resource";
}

<div class="container add-resource">
    <div class="card card-body">
        <h3 class="text-info font-weight-bold">Add Resource</h3>
        <form method="post" action="/Resource/Add" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-9">
                    <div class="md-form md-outline">
                        <label for="title">Title</label>
                        <input class="form-control w-50" type="text" name="title" id="title" required />
                    </div>
                    <div class="md-form md-outline">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="7" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label>Resource Type</label>
                        <select name="resourceType" class="form-control" id="resourceType" required>
                            <option value="">-- Select Type --</option>
                            <option value="article">Article</option>
                            <option value="video">Video Upload</option>
                        </select>
                    </div>

                    <div class="mb-3" id="urlInput">
                        <label>URL</label>
                        <input type="url" name="url" class="form-control" />
                    </div>

                    <div class="mb-3" id="videoInput" style="display: none;">
                        <label>Upload Video</label>
                        <input type="file" name="videoFile" class="form-control" accept=".mp4,video/mp4*" />
                    </div>

                    <input type="hidden" name="uploadedBy" value="1" /> <!-- Placeholder for user ID -->
                </div>

                <div class="col-lg-3">
                    <label class="fst-italic">Cover Image (Optional)</label>
                    <div class="custom-file">
                        <div class="files-upload" data-autosubmit="false">
                            <div class="wrapper">
                                <div class="card-text">
                                    <i class="bi bi-5x bi-card-image"></i>
                                    <p class="font-weight-bolder">No Image Uploaded</p>
                                </div>
                                <div class="preview">
                                    <img class="poster" src="~/img/placeholder.jpg">
                                    <div class="infos d-none">
                                        <div class="infos-inner">
                                            <p class="filename"></p>
                                            <a type="button" class="btn btn-sm btn-success">Change image</a>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" class="remove btn btn-sm btn-danger d-none">Remove</button>
                            </div>
                            <input type="file" name="coverImage" accept="image/png,image/jpeg,image/jpg,image/gif">
                        </div>
                    </div>
                </div>
            </div>
            <a href="/Resource" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-success">
                Add Resource
            </button>
        </form>
    </div>
</div>

<script src="~/js/previewFile.js" asp-append-version="true"></script>

<script>
    const resourceTypeDropdown = document.getElementById("resourceType");
    const urlInputDiv = document.getElementById("urlInput");
    const videoInputDiv = document.getElementById("videoInput");

    resourceTypeDropdown.addEventListener("change", function () {
        const selected = this.value;
        if (selected === "article" || selected === "youtube") {
            urlInputDiv.style.display = "block";
            videoInputDiv.style.display = "none";
        } else if (selected === "video") {
            urlInputDiv.style.display = "none";
            videoInputDiv.style.display = "block";
        } else {
            urlInputDiv.style.display = "none";
            videoInputDiv.style.display = "none";
        }
    });
</script>
