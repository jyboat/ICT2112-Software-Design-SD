@model IEnumerable<ClearCare.Models.Entities.M3T1.Assessment>

<h2>Current Patient's Assessments</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Hazard Type</th>
            <th>Doctor ID</th>
            <th>Patient ID</th>
            <th>Created At</th>
            <th>Risk Level</th>
            <th>Recommendation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assessment in Model)
        {
            <tr>
                <td>@assessment.getHazardType()</td>
                <td>@assessment.getDoctorId()</td>
                <td>@assessment.getPatientId()</td>
                <td>@assessment.getCreatedAt().ToString("yyyy-MM-dd")</td>
                <td>@assessment.getRiskLevel()</td>
                <td>@assessment.getRecommendation()</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="ViewAssessment" asp-route-assessmentId="@assessment.getId()" 
                           class="btn btn-sm btn-info" title="View">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="ViewEdit" asp-route-assessmentId="@assessment.getId()" 
                           class="btn btn-sm btn-warning" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="ViewDoctorEdit" asp-route-assessmentId="@assessment.getId()" 
                           class="btn btn-sm btn-primary" title="Doctor Edit">
                            <i class="fas fa-user-md"></i>
                        </a>
                        <form asp-action="DeleteAssessment" asp-route-assessmentId="@assessment.getId()" 
                              method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this assessment?');">
                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="ViewAdd" class="btn btn-primary">
    <i class="fas fa-plus"></i> Create New Assessment
</a>

@section Styles {
    <style>
        .badge {
            font-size: 0.9em;
            padding: 0.35em 0.65em;
        }
        .btn-group .btn {
            margin-right: 5px;
        }
        .btn-sm {
            padding: 0.25rem 0.5rem;
        }
        .table td {
            vertical-align: middle;
        }
    </style>
}