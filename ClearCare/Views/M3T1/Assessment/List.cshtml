@model List<Dictionary<string, object>>

<section class="container assessment">
    <h2 class="mb-2">All Assessments</h2>
    @if (true){ // If caregiver
        <div class="text-center mb-3">
            <a href="/Assessment/Add" class="btn btn-success">
                <i class="bi bi-plus me-1"></i> Submit living condition for assessment
            </a>
        </div>
    }
    <div class="table-responsive table-hover w-100">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Created At</th>
                    <th>Patient ID</th>
                    <th>Risk Level</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assessment in Model)
                {
                    <tr class="animated faster">
                        <td class="align-middle">@assessment["CreatedAt"].ToString()</td>
                        <td class="align-middle">@assessment["PatientId"]</td>
                        <td class="align-middle">@assessment["RiskLevel"]</td>
                        <td class="align-middle">
                            <a href="/Assessment/View/@assessment["Id"]"
                                class="btn btn-sm btn-primary me-2">
                                <i class="bi bi-eye me-2"></i> View
                            </a>
                            @if (true){ // If doctor
                                <a href="/Assessment/Edit/@assessment["Id"]"
                                    class="btn btn-sm btn-success me-2">
                                    <i class="bi bi-pencil-square me-2"></i> Analyze risks
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
