@model ClearCare.Models.Entities.Patient
@{
    ViewData["Title"] = "Remove Caregiver";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var patientData = Model.getProfileData();
    var hasAssignedCaregiverID = patientData.ContainsKey("AssignedCaregiverID") && !string.IsNullOrEmpty(patientData["AssignedCaregiverID"].ToString());
    
    // Clear any success messages that don't belong to this page
    if (TempData["SuccessMessage"] != null && TempData["SuccessMessage"].ToString().Contains("assigned"))
    {
        TempData.Remove("SuccessMessage");
    }
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">Remove Caregiver</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (!hasAssignedCaregiverID)
                    {
                        <div class="alert alert-info">
                            You currently don't have any caregiver assigned.
                        </div>
                        <div class="text-center mt-4">
                            <a asp-action="displayProfile" class="btn btn-secondary">Back to Profile</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h5>Currently Assigned Caregiver:</h5>
                            <p><strong>Name:</strong> @patientData["AssignedCaregiverName"]</p>
                        </div>
                        <form asp-action="RemoveCaregiver" asp-controller="Profile" method="post">
                            <div class="alert alert-warning">
                                Are you sure you want to remove your current caregiver?
                            </div>
                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-danger">Remove Caregiver</button>
                                <a asp-action="displayProfile" class="btn btn-secondary ms-2">Cancel</a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>