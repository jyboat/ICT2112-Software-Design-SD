@model ClearCare.Models.Entities.User

@{
    ViewData["Title"] = "User Profile";
    var profileData = Model.getProfileData();
    var selectedCode = profileData["MobileNumber"]?.ToString()?.Substring(0, 2); // new code added for country code
    var actualMobile = profileData["MobileNumber"]?.ToString()?.Substring(2); // new code added for country code
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 border-0">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="fw-bold">@profileData["Name"]'s Profile</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered mt-3">
                <tbody>
                    <tr>
                        <td class="fw-bold text-primary">Email:</td>
                        <td>@profileData["Email"]</td>
                    </tr>
                    <tr>
                        <td class="fw-bold text-primary">Role:</td>
                        <td>@profileData["Role"]</td>
                    </tr>
                    <tr>
                        <td class="fw-bold text-primary">Mobile Number:</td>
                        @* <td>@profileData["MobileNumber"]</td> *@
                        @* <td>@($"+{profileData["CountryCode"]} {profileData["MobileNumber"]}")</td> *@
                        <td>@($"+{selectedCode} {actualMobile}")</td>

                    </tr>
                    <tr>
                        <td class="fw-bold text-primary">Address:</td>
                        <td>@profileData["Address"]</td>
                    </tr>

                    @if (profileData.ContainsKey("Specialization"))
                    {
                        <tr>
                            <td class="fw-bold text-primary">Specialization:</td>
                            @* <td>@profileData["Specialization"]</td> *@
                            <td>@(string.IsNullOrWhiteSpace(profileData["Specialization"]?.ToString()) ? "N/A" : profileData["Specialization"])</td>
                        </tr>
                    }
                    @if (profileData.ContainsKey("Department"))
                    {
                        <tr>
                            <td class="fw-bold text-primary">Department:</td>
                            @* <td>@profileData["Department"]</td> *@
                            <td>@(string.IsNullOrWhiteSpace(profileData["Department"]?.ToString()) ? "N/A" : profileData["Department"])</td>
                        </tr>
                    }
                    @if (profileData.ContainsKey("DateOfBirth") && profileData["DateOfBirth"] is Google.Cloud.Firestore.Timestamp ts)
                    {
                        <tr><td class="fw-bold text-primary">Date of Birth:</td>
                            @* <td>@profileData["DateOfBirth"]</td>  *@
                            <td>@ts.ToDateTime().AddHours(8).ToString("dd MMM yyyy")</td> 
                        </tr>
                    }
                    @if (profileData.ContainsKey("AssignedPatientID"))
                    {
                        <tr><td class="fw-bold text-primary">Assigned Patient ID:</td>
                            @* <td>@profileData["AssignedPatientID"]</td> *@
                            <td>@(string.IsNullOrWhiteSpace(profileData["AssignedPatientID"]?.ToString()) ? "N/A" : profileData["AssignedPatientID"])</td>
                        </tr>
                    }
                    @if (profileData.ContainsKey("AssignedPatientName"))
                    {
                        <tr><td class="fw-bold text-primary">Assigned Patient Name:</td>
                            @* <td>@profileData["AssignedPatientName"]</td> *@
                            <td>@(string.IsNullOrWhiteSpace(profileData["AssignedPatientName"]?.ToString()) ? "N/A" : profileData["AssignedPatientName"])</td>
                        </tr>

                    }
                    @if (profileData.ContainsKey("AssignedCaregiverID"))
                    {
                        <tr>
                            <td class="fw-bold text-primary">Assigned Caregiver ID:</td>
                            @* <td>@profileData["AssignedCaregiverID"]</td> *@
                            <td>@(string.IsNullOrWhiteSpace(profileData["AssignedCaregiverID"]?.ToString()) ? "N/A" : profileData["AssignedCaregiverID"])</td>
                        </tr>
                    }
                    @if (profileData.ContainsKey("AssignedCaregiverName"))
                    {
                        <tr>
                            <td class="fw-bold text-primary">Assigned Caregiver:</td>
                            @* <td>@profileData["AssignedCaregiverName"]</td> *@
                            <td>@(string.IsNullOrWhiteSpace(profileData["AssignedCaregiverName"]?.ToString()) ? "N/A" : profileData["AssignedCaregiverName"])</td>
                        </tr>
                    }
                </tbody>
            </table>
                    
                    
                </tbody>
            </table>

            <div class="text-center mt-4">
                <a asp-controller="Profile" asp-action="displayUpdateProfile" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit Profile
                </a>
            </div>
        </div>
    </div>
</div>
