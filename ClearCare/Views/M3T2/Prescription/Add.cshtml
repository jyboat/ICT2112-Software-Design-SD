@model ClearCare.Models.Entities.M3T2.PrescriptionModel
@{
    ViewData["Title"] = "Add Prescription";
}

<h1>Add a New Prescription</h1>

<form asp-controller="Prescription" asp-action="Create" method="post">
    <!-- Patient ID -->
    <div class="form-group">
        <label asp-for="PatientId"></label>
        <input asp-for="PatientId" class="form-control" />
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <!-- Doctor ID -->
    <div class="form-group">
        <label asp-for="DoctorId"></label>
        <input asp-for="DoctorId" class="form-control" />
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <!-- Date Issued -->
    <div class="form-group">
        <label asp-for="DateIssued"></label>
        <input asp-for="DateIssued" type="date" class="form-control" />
        <span asp-validation-for="DateIssued" class="text-danger"></span>
    </div>

    <h3>Medications</h3>
    <!-- Here we loop through the Medications list -->
    @for (int i = 0; i < Model.Medications.Count; i++)
    {
        <div class="form-group">
            <label>Drug Name</label>
            <input asp-for="Medications[@i].DrugName" class="form-control" />
            <span asp-validation-for="Medications[@i].DrugName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Dosage</label>
            <input asp-for="Medications[@i].Dosage" class="form-control" />
            <span asp-validation-for="Medications[@i].Dosage" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-success">Submit</button>
</form>
