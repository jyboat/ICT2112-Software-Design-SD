@{
    ViewData["Title"] = "Notification Test";
}

<h2>Notification Test Page</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form asp-action="CreateNotification" method="post">
    <button type="submit" class="btn btn-primary">Create &amp; Send Test Notification</button>
</form>