@{
    var analytics = ViewData["AppointmentAnalytics"] as Dictionary<string, object>;
    var appointmentsPerType = analytics?["AppointmentsPerType"] as Dictionary<string, int>;
    var appointmentsPerDoctor = analytics?["AppointmentsPerDoctor"] as Dictionary<string, int>;
    var appointmentsPerMonth = analytics?["AppointmentsPerMonth"] as Dictionary<string, int>;
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<style>
.card {
    transition: transform 0.2s ease;
}

.card:hover {
    transform: scale(1.02);
}
</style>


<!-- Dashboard Header -->
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="fw-bold">üìÖ Service Appointments Dashboard</h2>
        <h5 class="text-muted">March 2025</h5>
    </div>

    <!-- Summary Metrics -->
<div class="row text-center mt-4 g-3">
    <div class="col-6 col-md-3">
        <a href="/Analytics/ListAppointments?filter=all" style="text-decoration: none;">
            <div class="card bg-primary text-white shadow-lg p-3">
                <h6>üìä Total Appointments</h6>
                <h3 class="fw-bold">@analytics?["TotalAppointments"]</h3>
            </div>
        </a>
    </div>
    <div class="col-6 col-md-3">
        <a href="/Analytics/ListAppointments?filter=completed" style="text-decoration: none;">
            <div class="card bg-success text-white shadow-lg p-3">
                <h6>‚úÖ Completed Appointments</h6>
                <h3 class="fw-bold">@analytics?["CompletedAppointments"]</h3>
            </div>
        </a>
    </div>
    <div class="col-6 col-md-3">
        <a href="/Analytics/ListAppointments?filter=pending" style="text-decoration: none;">
            <div class="card bg-warning text-dark shadow-lg p-3">
                <h6>‚è≥ Pending Appointments</h6>
                <h3 class="fw-bold">@analytics?["PendingAppointments"]</h3>
            </div>
        </a>
    </div>
    <div class="col-6 col-md-3">
        <a href="/Analytics/ListAppointments?filter=cancelled" style="text-decoration: none;">
            <div class="card bg-danger text-white shadow-lg p-3">
                <h6>‚ùå Cancelled Appointments</h6>
                <h3 class="fw-bold">@analytics?["CancelledAppointments"]</h3>
            </div>
        </a>
    </div>
</div>


    <!-- Charts Section -->
    <div class="row mt-4">
        <!-- Line Chart: Appointments Over Time -->
        <div class="col-md-8">
            <div class="card shadow-lg p-4">
                <h5 class="text-center">üìà Appointments Over Time</h5>
                <div class="chart-container">
                    <canvas id="appointmentsOverTimeChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Doughnut Chart: Appointment Status Breakdown -->
        <div class="col-md-4">
            <div class="card shadow-lg p-4">
                <h5 class="text-center">üìä Status Breakdown</h5>
                <div class="chart-container">
                    <canvas id="appointmentStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Bar Charts -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h5 class="text-center">ü©∫ Appointments Per Service Type</h5>
                <div class="chart-container">
                    <canvas id="appointmentsPerServiceChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h5 class="text-center">üë®‚Äç‚öïÔ∏è Appointments Per Doctor</h5>
                <div class="chart-container">
                   <canvas id="appointmentsPerDoctorChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Tables -->
    <div class="row mt-4">
        <div class="col-md-6">
            <h4 class="text-center">üìä Appointments Per Service Type</h4>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Service Type</th>
                        <th>Total Appointments</th>
                    </tr>
                </thead>
                <tbody>
                    @if (appointmentsPerType != null)
                    {
                        @foreach (var type in appointmentsPerType)
                        {
                            <tr>
                                <td>@type.Key</td>
                                <td>@type.Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h4 class="text-center">üìä Appointments Per Doctor</h4>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Doctor ID</th>
                        <th>Total Appointments</th>
                    </tr>
                </thead>
                <tbody>
                    @if (appointmentsPerDoctor != null)
                    {
                        @foreach (var doctor in appointmentsPerDoctor)
                        {
                            <tr>
                                <td>@doctor.Key</td>
                                <td>@doctor.Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Chart.js Scripts -->
<script>
    // Doughnut Chart: Appointment Status Breakdown
    var ctx1 = document.getElementById('appointmentStatusChart').getContext('2d');
    new Chart(ctx1, {
        type: 'doughnut',
        data: {
            labels: ['Completed', 'Pending', 'Cancelled'],
            datasets: [{
                data: [@analytics?["CompletedAppointments"], @analytics?["PendingAppointments"], @analytics?["CancelledAppointments"]],
                backgroundColor: ['#28a745', '#ffc107', '#dc3545']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

    // Line Chart: Appointments Over Time
    var ctx2 = document.getElementById('appointmentsOverTimeChart').getContext('2d');
    var appointmentsPerMonth = @Html.Raw(Json.Serialize(appointmentsPerMonth ?? new Dictionary<string, int>()));
    new Chart(ctx2, {
        type: 'line',
        data: {
            labels: Object.keys(appointmentsPerMonth),
            datasets: [{
                label: 'Total Appointments',
                data: Object.values(appointmentsPerMonth),
                borderColor: '#007bff',
                backgroundColor: 'rgba(0, 123, 255, 0.2)',
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });

    // Bar Chart: Appointments Per Service Type
var ctx3 = document.getElementById('appointmentsPerServiceChart').getContext('2d');
var appointmentsPerType = @Html.Raw(Json.Serialize(appointmentsPerType ?? new Dictionary<string, int>()));
new Chart(ctx3, {
    type: 'bar',
    data: {
        labels: Object.keys(appointmentsPerType),
        datasets: [{
            label: 'Appointments',
            data: Object.values(appointmentsPerType),
            backgroundColor: '#17a2b8'
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        onClick: function (e, elements) {
            if (elements.length > 0) {
                var index = elements[0].index;
                var selectedType = this.data.labels[index];
                window.location.href = `/Analytics/ListAppointments?filter=serviceType&value=${selectedType}`;
            }
        },
        scales: {
            y: { beginAtZero: true }
        }
    }
});

    // Bar Chart: Appointments Per Doctor
   var ctx4 = document.getElementById('appointmentsPerDoctorChart').getContext('2d');
    var appointmentsPerDoctor = @Html.Raw(Json.Serialize(appointmentsPerDoctor ?? new Dictionary<string, int>()));

    var doctorChart = new Chart(ctx4, {
        type: 'bar',
        data: {
            labels: Object.keys(appointmentsPerDoctor),
            datasets: [{
                label: 'Appointments',
                data: Object.values(appointmentsPerDoctor),
                backgroundColor: '#ff9800'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: { beginAtZero: true }
            },
            onClick: function (evt, elements) {
                if (elements.length > 0) {
                    const index = elements[0].index;
                    const doctorId = this.data.labels[index];
                    window.location.href = `/Analytics/ListAppointments?filter=doctor&value=${doctorId}`;
                }
            }
        }
    });
</script>
