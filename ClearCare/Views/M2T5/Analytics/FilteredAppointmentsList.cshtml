@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = ViewData["Title"] ?? "Filtered Appointments";
    var appointments = ViewData["Appointments"] as List<Dictionary<string, object>>;
}

<h2 class="mt-4">@ViewData["Title"]</h2>

@if (appointments == null || appointments.Count == 0)
{
    <div class="alert alert-warning">No appointments found.</div>
}
else
{
    <table class="table table-bordered table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>Appointment ID</th>
                <th>Patient ID</th>
                <th>Nurse ID</th>
                <th>Doctor ID</th>
                <th>Service Type</th>
                <th>Status</th>
                <th>Date & Time</th>
                <th>Slot</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in appointments)
            {
                var appointmentId = appointment["AppointmentId"]?.ToString();
var dateTime = appointment["DateTime"] is Google.Cloud.Firestore.Timestamp ts
    ? ts.ToDateTime().ToString("yyyy-MM-dd HH:mm")
    : ((DateTime)appointment["DateTime"]).ToString("yyyy-MM-dd HH:mm");

                <tr>
                    <td>@appointmentId</td>
                    <td>@appointment["PatientId"]</td>
                    <td>@appointment["NurseId"]</td>
                    <td>@appointment["DoctorId"]</td>
                    <td>@appointment["Service"]</td>
                    <td>@appointment["Status"]</td>
                    <td>@dateTime</td>
                    <td>@appointment["Slot"]</td>
                    <td>@appointment["Location"]</td>
                </tr>
            }
        </tbody>
    </table>
}
