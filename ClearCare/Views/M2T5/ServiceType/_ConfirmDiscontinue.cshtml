@model ClearCare.Models.Entities.ServiceType_SDM

<div class="modal-header">
    <h5 class="modal-title">Confirm Discontinue</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <p>Are you sure you want to discontinue <strong>@Model.Name</strong>?</p>

    @if (ViewBag.UpcomingAppointmentIds.Count > 0)
    {
        <p>These appointments must be cleared first:</p>
        <ul>
            @foreach (var apptId in ViewBag.UpcomingAppointmentIds)
            {
                <li>@apptId</li>
            }
        </ul>
        <div class="alert alert-warning">You must resolve these appointments before proceeding.</div>
    }
    else
    {
        <div class="alert alert-success">No upcoming appointments. You may proceed.</div>
        <form method="post" asp-action="DiscontinueConfirmed" asp-controller="ServiceTypePage">
            <input type="hidden" name="id" value="@Model.ServiceTypeId" />
            <button type="submit" class="btn btn-danger">Confirm Discontinue</button>
        </form>
    }
</div>
