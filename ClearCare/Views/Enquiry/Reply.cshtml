@model ClearCare.Models.Enquiry

@{
    ViewData["Title"] = "Reply to Enquiry";
}

<h2>Reply to Enquiry</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h4>Enquiry Details</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Document ID:</dt>
                    <dd class="col-sm-8">@Model.FirestoreId</dd>
                    
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>
                    
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    
                    <dt class="col-sm-4">Message:</dt>
                    <dd class="col-sm-8">@Model.Message</dd>
                    
                    <dt class="col-sm-4">User UUID:</dt>
                    <dd class="col-sm-8">@Model.UserUUID</dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Your Reply</h4>
            </div>
            <div class="card-body">
                <form asp-action="SendReply" method="post">
                    <input type="hidden" name="enquiryId" value="@Model.FirestoreId" />
                    
                    <div class="form-group">
                        <label for="replySubject">Subject</label>
                        <input type="text" class="form-control" id="replySubject" name="subject" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="replyMessage">Reply Message</label>
                        <textarea class="form-control" id="replyMessage" name="message" rows="6" required></textarea>
                    </div>
                    
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Send Reply</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
