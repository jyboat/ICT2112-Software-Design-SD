@model ReplyToEnquiryViewModel

@{
    ViewData["Title"] = "Reply to Enquiry";

    // Retrieve pagination info from ViewBag.
    // These are set in your controller (e.g., in your reply action).
    int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
    int totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
    int totalReplies = ViewBag.TotalReplies != null ? (int)ViewBag.TotalReplies : 0;
}

<h2>Reply to Enquiry</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h4>Enquiry Details</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Document ID:</dt>
                    <dd class="col-sm-8">@Model.Enquiry.FirestoreId</dd>
                    
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Enquiry.Name</dd>
                    
                    <dt class="col-sm-4">Message:</dt>
                    <dd class="col-sm-8">@Model.Enquiry.Message</dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Your Reply</h4>
            </div>
            <div class="card-body">
                <form asp-action="SendReply" method="post">
                    <input type="hidden" name="enquiryId" value="@Model.Enquiry.FirestoreId" />
                    <input type="hidden" name="recipientName" value="@Model.Enquiry.Name" />
                    <input type="hidden" name="originalMessage" value="@Model.Enquiry.Message" />
                    <input type="hidden" name="userUUID" value="@Model.Enquiry.UserUUID" />
                    
                    @* <div class="form-group">
                        <label for="replySubject">Subject</label>
                        <input type="text" class="form-control" id="replySubject" name="subject" required />
                    </div> *@
                    
                    <div class="form-group">
                        <label for="replyMessage">Reply Message</label>
                        <textarea class="form-control" id="replyMessage" name="message" rows="6" required></textarea>
                    </div>
                    
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Send Reply</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<hr />

<h3>Previous Replies</h3>

@if (Model.Replies != null && Model.Replies.Any())
{
    <div class="card">
        <div class="card-header">
            <h4>Replies</h4>
        </div>
        <div class="card-body">
            <ul class="list-group">
               @foreach (var reply in Model.Replies)
{
    <li class="list-group-item">
        <strong>Subject:</strong> @reply.Subject <br />
        <strong>Message:</strong> @reply.Message <br />
        <small class="text-muted">
            Sent on: @reply.CreatedAt.ToLocalTime()
        </small>
    </li>
}

            </ul>
        </div>
    </div>

    <!-- Pagination controls -->
    <div class="mt-3">
        <span>
            Page @currentPage of @totalPages 
            (Total replies: @totalReplies)
        </span>
        <br />

        @* Display "Previous" button only if we're not on the first page *@
        @if (currentPage > 1)
        {
            <a href="@Url.Action("reply", "Enquiry", new { id = Model.Enquiry.FirestoreId, pageNumber = currentPage - 1 })"
               class="btn btn-primary">Previous</a>
        }

        @* Display "Next" button only if we're not on the last page *@
        @if (currentPage < totalPages)
        {
            <a href="@Url.Action("reply", "Enquiry", new { id = Model.Enquiry.FirestoreId, pageNumber = currentPage + 1 })"
               class="btn btn-primary">Next</a>
        }
    </div>
}
else
{
    <p>No replies yet.</p>
}
