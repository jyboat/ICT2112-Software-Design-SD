@model List<ClearCare.Models.Enquiry>

@{
    ViewData["Title"] = "List of Enquiries";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Document ID</th>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>User UUID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var e in Model)
    {
      <tr>
        <td>@e.FirestoreId</td>
        <td>@e.Id</td>
        <td>@e.Name</td>
        <td>@e.Email</td>
        <td>@e.Message</td>
        <td>@e.UserUUID</td>
        <td>
            <a href="@Url.Action("Reply", "Enquiry", new { id = e.FirestoreId })" class="btn btn-primary">Reply</a>
        </td>
      </tr>
    }
  </tbody>
</table>
