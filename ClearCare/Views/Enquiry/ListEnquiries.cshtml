@model List<ClearCare.Models.Enquiry>

@{
    ViewData["Title"] = "List of Enquiries";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Message</th>
                        <th>Doctor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var e in Model)
                    {
                        <tr>
                            <td>@e.Name</td>
                            <td>@e.Message</td>
                            <td>@e.DoctorUUID</td>
                            <td>
                                <a href="@Url.Action("Reply", "Enquiry", new { id = e.FirestoreId })" class="btn btn-success btn-sm">Reply</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="@Url.Action("Index", "Enquiry")" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
