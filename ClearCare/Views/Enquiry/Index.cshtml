@using ClearCare
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Enquiry";

    // Example list of doctors; in a real scenario, you might pass this list
    // via a model from your controller (e.g., as Model.Doctors).
    var doctorList = new List<SelectListItem>
    {
        new SelectListItem { Text = "Dr. Alice", Value = "uuid-alice" },
        new SelectListItem { Text = "Dr. Bob",   Value = "uuid-bob"   },
        new SelectListItem { Text = "Dr. Carol", Value = "uuid-carol" }
    };
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Enquiry" asp-action="SubmitEnquiry" method="post">
                <!-- Hardcoded User UUID -->
                <input type="hidden" name="UserUUID" value="@HardcodedUUIDs.UserUUID" />

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="Name" required />
                </div>

                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" name="Message" rows="3" required></textarea>
                </div>

                <!-- Dropdown for Doctor selection -->
                <div class="mb-3">
                    <label for="doctor" class="form-label">Select Doctor</label>
                    <select class="form-select" id="doctor" name="DoctorUUID" required>
                        <option value="">-- Select a Doctor --</option>
                        @foreach (var doctor in doctorList)
                        {
                            <option value="@doctor.Value">@doctor.Text</option>
                        }
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a asp-controller="Enquiry"
                       asp-action="ListEnquiriesByUser"
                       asp-route-userUuid="@HardcodedUUIDs.UserUUID"
                       class="btn btn-outline-primary">
                       View My Enquiries
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
