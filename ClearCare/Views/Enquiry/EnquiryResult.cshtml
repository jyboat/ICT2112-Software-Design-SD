@{
    ViewData["Title"] = "Enquiry Submitted";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <p class="lead">Your enquiry has been submitted successfully!</p>
            <div class="mb-3">
                <strong>Name:</strong> @ViewData["Name"]
            </div>
            <div class="mb-3">
                <strong>Email:</strong> @ViewData["Email"]
            </div>
            <div class="mb-3">
                <strong>Message:</strong> @ViewData["Message"]
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Index", "Enquiry")" class="btn btn-primary">Back to Enquiry Form</a>
                <a href="@Url.Action("ListEnquiries", "Enquiry", new { userUuid = "eb8eb0a4-4a33-4bc9-b2f2-3a55154a8899" })" class="btn btn-info">View My Enquiries</a>
            </div>
        </div>
    </div>
</div>
