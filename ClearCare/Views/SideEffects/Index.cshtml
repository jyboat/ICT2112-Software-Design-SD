@model IEnumerable<ClearCare.Models.SideEffect>

@{
    ViewData["Title"] = "Side Effects";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h2 class="mb-0">Side Effects</h2>
        </div>
        <div class="card-body">
            <p>Below is a list of all recorded side effects.</p>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Side Effect Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var se in Model)
                    {
                        <tr>
                            <td>@se.Name</td>
                            <td>@se.Description</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@se.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@se.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-muted">No side effects found.</td>
                    </tr>
                }
                </tbody>
            </table>
            <a asp-action="Create" class="btn btn-success">Add New Side Effect</a>
        </div>
    </div>
</div>
