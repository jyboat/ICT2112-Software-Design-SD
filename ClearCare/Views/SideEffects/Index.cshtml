@model List<ClearCare.Models.SideEffectModel>

@{
    ViewData["Title"] = "Side Effects";
}

<div class="container py-4">
    <h1 class="mb-4">Side Effects</h1>

    <!-- Always show the Add Side Effect button -->
    <a asp-action="Add" class="btn btn-primary mb-3">Add Side Effect</a>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Patient ID</th>
                    <th>Drug Name</th>
                    <th>Drug Information</th>
                    <th>Side Effects</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sideEffect in Model)
                {
                    <tr>
                        <td>@sideEffect.PatientId</td>
                        <td>@sideEffect.DrugName</td>
                        <td>@sideEffect.DrugInformation</td>
                        <td>@sideEffect.SideEffects</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No side effects found.
        </div>
    }
</div>
