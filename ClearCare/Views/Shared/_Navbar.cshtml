@using ClearCare

<nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClearCare</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav me-auto">
                @if (HardcodedUUIDs.UserRole == "Doctor")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToEnquiry">
                            <i class="bi bi-chat-dots me-1"></i> Enquiry
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToSideEffects">
                            <i class="bi bi-chat-dots me-1"></i> SideEffects
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToPrescription">
                            <i class="bi bi-chat-dots me-1"></i> Prescription
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToDrugLog">
                            <i class="bi bi-chat-dots me-1"></i> DrugLog
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToDrugInteraction">
                            <i class="bi bi-chat-dots me-1"></i> Drug Interaction
                        </a>
                    </li>
                }
                else if (HardcodedUUIDs.UserRole == "Patient")
                {
                   
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToEnquiry">
                            <i class="bi bi-chat-dots me-1"></i> Enquiry
                        </a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToSideEffects">
                            <i class="bi bi-chat-dots me-1"></i> SideEffects
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToPrescription">
                            <i class="bi bi-chat-dots me-1"></i> Prescription
                        </a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Application" asp-action="goToDrugLog">
                            <i class="bi bi-chat-dots me-1"></i> DrugLog
                        </a>
                    </li>
                   
                }
                else
                {
                    <li class="nav-item">
                        <span class="nav-link disabled">No access</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
