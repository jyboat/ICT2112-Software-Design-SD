@{
    var userRole = Context.Session.GetString("Role");
}
<nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClearCare</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i
                            class="bi bi-house me-1"></i>Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="NotificationTest" asp-action="Index">Test Notifications</a>
                </li>
                @* Check if user is admin *@
                @if (userRole == "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="bi bi-person me-1"></i>Manage Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AuditView"><i class="bi bi-journal-text me-1"></i>Audit Log</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-person me-1"></i>Manage users</a>
                    </li>
                }
                @* Check if user is doctor or nurse *@
                @if (userRole == "Doctor" || userRole == "Nurse"){
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="ViewRecord" asp-action="DisplayViewRecord"><i class="bi bi-file-earmark-medical me-1"></i>Patient Records</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Analytics" asp-action="AppointmentsAnalytics">
                            <i class="bi bi-bar-chart me-1"></i> Appointments Analytics
                        </a>
                    </li>
                }
                @if (userRole == "Doctor"){
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ServiceTypeInput" asp-action="Index">Service Type</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/api/ServiceAppointments/Index">
                            <i class="bi bi-calendar-week me-1"></i>Appointments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="ServiceHistory" asp-action="Index">Service History</a>
                    </li>

                }
                @if (userRole == "Nurse"){
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="ViewRecord" asp-action="DisplayViewRecord"><i class="bi bi-file-earmark-medical me-1"></i>Patient Records</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="NurseAvailability" asp-action="Index">Nurse Availability</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ServiceCompletionInput" asp-action="GetAppointmentDetails"><i class="bi bi-check-circle me-1"></i>Service Completion</a>
                    </li>
                }
                @if (userRole == "Patient"){
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="Privacy"><i class="bi bi-calendar-week me-1"></i>Appointments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Community" asp-action="Privacy"><i class="bi bi-person-heart me-1"></i>Community</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Enquiry" asp-action="Privacy"><i
                                class="bi bi-chat-dots me-1"></i>Enquiry</a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (userRole == "Patient"){
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Resource" asp-action="Index"><i class="bi bi-folder me-1"></i>Resources</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Feedback" asp-action="Index"><i class="bi bi-receipt me-1"></i>Feedback</a>
                    </li>
                }
                <li class="nav-item dropdown my-auto">
                    <a class="btn text-white dropdown-toggle" href="#" id="profile-dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person me-1"></i>Profile
                    </a>
                    <div class="dropdown-menu dropdown-menu-end dropdown-primary mt-1" aria-labelledby="profile-dropdown" style="z-index: 1050;">
                        @if (userRole == "Patient"){
                            <a class="dropdown-item" asp-area="" asp-controller="Profile" asp-action="displayProfile"><i class="bi bi-person-badge me-1"></i>My Profile</a>
                            <a class="dropdown-item" asp-controller="ViewRecord" asp-action="ViewPatientMedRecord"><i class="bi bi-clipboard-pulse me-1"></i>Medical Records</a>
                            <a class="dropdown-item" asp-controller="Profile" asp-action="displayAssignCaregiver"><i class="bi bi-people-fill me-1"></i>Assign Caregiver</a>
                            <a class="dropdown-item" asp-controller="Profile" asp-action="displayRemoveCaregiver"><i class="bi bi-people-fill me-1"></i>Remove Caregiver</a>
                        }
                        <a class="dropdown-item" asp-controller="NotificationPreference" asp-action="Index"><i class="bi bi-gear me-1"></i>Settings</a>
                        <a class="dropdown-item text-danger" asp-controller="Login" asp-action="Logout"><i class="bi bi-box-arrow-right me-1"></i>Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
