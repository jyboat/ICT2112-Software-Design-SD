@{
    ViewData["Title"] = "Add Availability";
}

<h2>Add Nurse Availability</h2>

<form asp-controller="NurseAvailability" asp-action="AddAvailability" method="post">
    <div class="form-group">
        <label for="NurseID">Nurse ID</label>
        <input type="text" class="form-control" id="NurseID" name="NurseID" value="USR003" readonly>
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input type="date" class="form-control" id="Date" name="Date" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a asp-controller="NurseAvailability" asp-action="Index" class="btn btn-secondary">Back to List</a>
