@{
    ViewData["Title"] = "Update Medical Record";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/medicalRecords.css">
</head>

<div class="container py-5">
    <div class="mx-auto bg-white rounded-3 shadow p-4" style="max-width: 600px;">

        <div class="text-dark p-4">
            <h2 class="text-center mb-0">@ViewData["Title"]</h2>
        </div>

         <div class="card-body p-4">
            <div class="alert alert-warning text-center mb-4">
                <strong>Disclaimer:</strong><br>A medical record cannot be amended. An erratum has to be filed.
            </div>

            <!-- Hidden TempData message values -->
            <input type="hidden" id="ToastrSuccessMessage" value="@TempData["SuccessMessage"]" />
            <input type="hidden" id="ToastrErrorMessage" value="@TempData["ErrorMessage"]" />

            <form method="post" asp-controller="FileErratum" asp-action="fileErratumRecord" enctype="multipart/form-data"
            onsubmit="return showAlert()">
                <div class="mb-3">
                    <label for="recordID" class="form-label fw-semibold">Record ID</label>
                    <input type="text" class="form-control rounded-pill shadow-sm" id="recordID" name="recordID"
                        value="@ViewBag.MedicalRecordID" readonly>
                </div>

                <div class="mb-3">
                    <label for="erratumDetails" class="form-label fw-semibold">Erratum Details</label>
                    <textarea class="form-control rounded-3 shadow-sm" id="erratumDetails" name="erratumDetails" rows="3"
                        placeholder="Describe the amendment here..." required></textarea>
                </div>

                <div class="mb-3">
                    <label for="erratumAttachment" class="form-label fw-semibold">Attachment (Optional)</label>
                    <input type="file" class="form-control rounded-pill shadow-sm" id="erratumAttachment" name="erratumAttachment"
                        accept="image/*,application/pdf">
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill shadow">File Erratum</button>
            </form>
         </div>
    </div>
</div>