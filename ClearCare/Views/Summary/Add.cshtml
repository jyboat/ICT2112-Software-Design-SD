

@{
    ViewData["Title"] = "Add Summary";
}

<div class="container">
    <div class="d-flex justify-content-center align-items-center bg-light">
        <div class="card shadow p-4">
            <h2 class="text-info">Add New Summary for {patient name}</h2>
            <form action="/Summary/Add" method="post">
                <div class="form-group mb-3">
                    <label for="details" class="form-label">Details</label>
                    <textarea name="details" class="form-control" required></textarea>
                </div>

                <div class="form-group mb-3">
                    <label for="instructions" class="form-label">Follow-Up Instructions</label>
                    <textarea name="instructions" class="form-control" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>


