<!-- Updated ChooseEmail.cshtml with Bootstrap -->
@{
    Layout = null;
    ViewBag.Title = "Choose Email for OTP";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Choose Email</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css">
</head>

<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <form method="post" asp-action="sendOTPToEmail" class="email-Form">
        <span class="mainHeading">Email</span>
        <p class="emailSubheading">Enter your email address to get a verification code for 2FA</p>
        <div class="inputContainer">
            <input required type="email" inputmode="email" class="email-input" id="email" name="email"
                placeholder="Email">
        </div>
        <button class="getOTPButton" type="submit">Get OTP</button>
    </form>
</body>

</html>
