@{
    Layout = null;
    ViewBag.Title = "Verify OTP for Reset Password";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - ClearCare</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css">
    <script defer src="~/js/login.js"></script>
</head>

<body class="bg-light">
    <div class="container-fluid d-flex justify-content-center align-items-center vh-100"> <!-- Full-screen center -->
        <div class="card shadow p-4" style="max-width: 450px; width: 100%;"> <!-- Card for OTP form -->
            <h2 class="text-center">Verify OTP</h2>
            <p class="text-center text-muted">We have sent a verification code to your email address</p>
            <form method="post" asp-action="verifyResetOTP" class="otp-Form">
                <div class="mb-3 d-flex justify-content-center gap-2"> <!-- Flexbox with spacing between inputs -->
                    <input required maxlength="1" type="text" inputmode="numeric" class="otp-input form-control text-center" id="otp-input1" name="otp-input1">
                    <input required maxlength="1" type="text" inputmode="numeric" class="otp-input form-control text-center" id="otp-input2" name="otp-input2">
                    <input required maxlength="1" type="text" inputmode="numeric" class="otp-input form-control text-center" id="otp-input3" name="otp-input3">
                    <input required maxlength="1" type="text" inputmode="numeric" class="otp-input form-control text-center" id="otp-input4" name="otp-input4">
                    <input required maxlength="1" type="text" inputmode="numeric" class="otp-input form-control text-center" id="otp-input5" name="otp-input5">
                    <input required maxlength="1" type="text" inputmode="numeric" class="otp-input form-control text-center" id="otp-input6" name="otp-input6">
                </div>
                <button class="btn btn-primary w-100" type="submit">Verify</button> <!-- Full-width button -->
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
