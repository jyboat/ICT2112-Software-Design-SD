<!-- Updated VerifyOTP.cshtml with Bootstrap -->
@{
    Layout = null;
    ViewBag.Title = "Verify OTP";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Verify OTP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css">
    <script defer src="~/js/login.js"></script>
</head>

<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <form method="post" asp-action="verifyOTP" class="otp-Form">
        <span class="mainHeading">Verify OTP</span>
        <p class="otpSubheading">We have sent a verification code to your email address</p>
        <div class="inputContainer">
            <input required maxlength="1" type="text" inputmode="numeric" class="otp-input" id="otp-input1"
                name="otp-input1">
            <input required maxlength="1" type="text" inputmode="numeric" class="otp-input" id="otp-input2"
                name="otp-input2">
            <input required maxlength="1" type="text" inputmode="numeric" class="otp-input" id="otp-input3"
                name="otp-input3">
            <input required maxlength="1" type="text" inputmode="numeric" class="otp-input" id="otp-input4"
                name="otp-input4">
            <input required maxlength="1" type="text" inputmode="numeric" class="otp-input" id="otp-input5"
                name="otp-input5">
            <input required maxlength="1" type="text" inputmode="numeric" class="otp-input" id="otp-input6"
                name="otp-input6">
        </div>
        <button class="verifyButton" type="submit">Verify</button>
    </form>
</body>

</html>