@model ClearCare.Models.Entities.ServiceBacklogViewModel

@{
    ViewData["Title"] = "Reassign Service Appointment";
}

<!DOCTYPE html>
<html>

<head>
    <title>Reassign Backlog</title>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar/index.global.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
<h1 class="my-4">@ViewData["Title"]</h1>

<form id="appointmentForm" method="post" asp-action="ReassignManual">
    <!-- Disabled or hidden fields for unchangeable data -->
    <input type="hidden" name="BacklogId" value="@Model.BacklogId">

    <label for="appointmentId">Appointment ID:</label>
    <input type="text" id="appointmentId" name="AppointmentId" value="@Model.AppointmentId" readonly style="background-color: #e9ecef;"><br><br>

    <label for="patientId">Patient ID:</label>
    <input type="text" id="patientId" name="PatientId" value="@Model.PatientId" readonly style="background-color: #e9ecef;"><br><br>

    <label for="doctorId">Doctor ID:</label>
    <input type="text" id="doctorId" name="DoctorId" value="@Model.DoctorId" readonly style="background-color: #e9ecef;"><br><br>

    <label for="serviceTypeId">Service Type:</label>
    <input type="text" id="serviceTypeId" name="ServiceType" value="@Model.ServiceType" readonly style="background-color: #e9ecef;"><br><br>

    <label for="nurseId">Nurse:</label>
    <select id="nurseId" name="NurseId" class="select2" required>
        <option value="">Select Nurse</option>
        @foreach (var nurse in ViewBag.Nurses)
        {
            <option value="@nurse["id"]">@nurse["name"]</option>
        }
    </select><br><br>

    <label for="dateTime">Date & Time:</label>
    <input type="datetime-local" id="dateTime" name="DateTime" required><br><br>


    <label for="slot">Slot:</label>
    <input type="number" id="slot" name="Slot" required><br><br>

    <label for="location">Location:</label>
    <select id="location" name="Location" class="form-control" required>
        <option value="">Select Location Type</option>
        <option value="PHYSICAL">Physical</option>
        <option value="VIRTUAL">Virtual</option>
    </select><br><br>
    <button type="submit">Reassign</button>
</form>

</body>
</html>

