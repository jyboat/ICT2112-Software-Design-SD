@{
    ViewData["Title"] = "Add Patients to Auto Schedule";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<h2>Add Patients to Auto Schedule</h2>

<!-- Set the form action to the route for TestAutoAppointment -->
<form id="appointmentForm" method="post" action="/api/ServiceAppointments/TestAutoAppointment">
    <label for="patientId">Patients:</label>
    <select id="patientId" name="PatientIds" class="select2" multiple required>
        <option disabled value="">Select Patients</option>
        @foreach (var patient in ViewBag.Patients)
        {
            <option value="@patient.PatientId">@patient.Name</option>
        }
    </select>
    <br><br>
    <button type="submit">Submit</button>
</form>

<script>
    $(document).ready(function () {
        $('.select2').select2();
    });
</script>
