@{
    ViewData["Title"] = "Create Service Appointment";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<h2>Create Service Appointment</h2>

<form id="appointmentForm" method="post">
    <label for="appointmentId">Appointment ID:</label>
    <input type="text" id="appointmentId" name="AppointmentId" required><br><br>

    <label for="patientId">Patient:</label>
    <select id="patientId" name="PatientId" class="select2" required>
        <option value="">Select Patient</option>
        @foreach (var patient in ViewBag.Patients)
        {
            <option value="@patient["id"]">@patient["name"]</option>
        }
    </select><br><br>

    <label for="nurseId">Nurse:</label>
    <select id="nurseId" name="NurseId" class="select2">
        <option value="">Select Nurse</option>
        @foreach (var nurse in ViewBag.Nurses)
        {
            <option value="@nurse["id"]">@nurse["name"]</option>
        }
    </select><br><br>

    <label for="doctorId">Doctor ID:</label>
    <input type="text" id="doctorId" name="DoctorId"><br><br>

    <label for="serviceTypeId">Service Type:</label>
    <input type="text" id="serviceTypeId" name="ServiceTypeId" required><br><br>

    <label for="status">Status:</label>
    <input type="text" id="status" name="Status" required><br><br>

    <label for="appointmentDate">Date:</label>
    <input type="date" id="appointmentDate" name="AppointmentDate" required><br><br>

    <label for="timeSlot">Time Slot:</label>
    <select id="timeSlot" name="TimeSlot" required>
        <option value="">Select Time Slot</option>
        <option value="0">08:00 - 09:00</option>
        <option value="1">09:00 - 10:00</option>
        <option value="2">10:00 - 11:00</option>
        <option value="3">11:00 - 12:00</option>
        <option value="4">12:00 - 13:00</option>
        <option value="5">13:00 - 14:00</option>
        <option value="6">14:00 - 15:00</option>
        <option value="7">15:00 - 16:00</option>
    </select><br><br>

    <label for="location">Location:</label>
    <select id="location" name="Location" class="form-control" required>
        <option value="">Select Location Type</option>
        <option value="PHYSICAL">Physical</option>
        <option value="VIRTUAL">Virtual</option>
    </select><br><br>
    
    <button type="submit">Submit</button>
</form>

<script>
    $(document).ready(function() {
        // initialize select2 for dropdown fields
        $('.select2').select2({
            placeholder: 'Search...',
            allowClear: true
        });
        
        // set today as the minimum date for the appointment date
        let today = new Date();
        let formattedDate = today.toISOString().split('T')[0];
        document.getElementById('appointmentDate').min = formattedDate;
    });
    
    document.getElementById("appointmentForm").addEventListener("submit", function(event) {
        event.preventDefault(); // prevent form from redirecting
        
        // get the selected date and time slot
        let selectedDate = document.getElementById("appointmentDate").value;
        let selectedTimeSlot = document.getElementById("timeSlot").value;
        
        if (!selectedDate || selectedTimeSlot === "") {
            alert("Please select both date and time slot");
            return;
        }
        
        // calculate the hours based on the selected time slot
        let hour = 8 + parseInt(selectedTimeSlot);
        
        // manually construct the ISO string without timezone conversion
        let isoString = `${selectedDate}T${hour.toString().padStart(2, '0')}:00:00.000Z`;
        
        // build the form data object
        let formData = {
            AppointmentId: document.getElementById("appointmentId").value,
            PatientId: document.getElementById("patientId").value,
            NurseId: document.getElementById("nurseId").value,
            DoctorId: document.getElementById("doctorId").value,
            ServiceTypeId: document.getElementById("serviceTypeId").value,
            Status: document.getElementById("status").value,
            DateTime: isoString, // use our manually constructed ISO string
            Slot: parseInt(selectedTimeSlot),
            Location: document.getElementById("location").value
        };

        // log the data for debugging
        console.log("sending data:", formData);

        // send the data to the API
        fetch("/api/ServiceAppointments/AddAppt", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(formData)
        })
        .then(response => {
            if (!response.ok) {
                return response.json().then(err => {
                    // Log the entire error response for debugging
                    console.error("Error response:", err.message);
                    throw new Error(err.message || "An error occurred");
                });
            }
            return response.json();
        })
        .then(data => {
            alert("Appointment created successfully!");
            console.log("Response:", data);
        })
        .catch(error => {
            alert("Error: " + error.message); // display the error message
            console.error("Error:", error);
        });
    });
</script>