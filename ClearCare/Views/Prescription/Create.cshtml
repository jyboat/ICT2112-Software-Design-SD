@model ClearCare.Models.PrescriptionModel
@{
    ViewData["Title"] = "Create Prescription";
}

<h1>Create a New Prescription</h1>

<form asp-controller="Prescription" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PatientId"></label>
        <input asp-for="PatientId" class="form-control" />
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorId"></label>
        <input asp-for="DoctorId" class="form-control" />
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DrugList"></label>
        <!-- 
            If DrugList is a List<string>, you might accept a comma-separated string 
            and split it in your controller. Or handle it however suits your design.
        -->
        <textarea asp-for="DrugList" class="form-control"></textarea>
        <span asp-validation-for="DrugList" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateIssued"></label>
        <input asp-for="DateIssued" type="date" class="form-control" />
        <span asp-validation-for="DateIssued" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DosageInfo"></label>
        <textarea asp-for="DosageInfo" class="form-control"></textarea>
        <span asp-validation-for="DosageInfo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
</form>
