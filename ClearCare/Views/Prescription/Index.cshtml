@model List<ClearCare.Models.PrescriptionModel>

@{
    ViewData["Title"] = "Prescriptions";

    // Example role check; adjust to whatever you have in your code
    bool isDoctor = (HardcodedUUIDs.UserRole == "Doctor");
}

<h1>Prescription List</h1>

<!-- Table to display prescriptions -->
<table class="table">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>Doctor ID</th>
            <th>Drug List</th>
            <th>Date Issued</th>
            <th>Dosage Info</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var prescription in Model)
            {
                <tr>
                    <td>@prescription.PatientId</td>
                    <td>@prescription.DoctorId</td>
                    <td>
                        @if (prescription.DrugList != null)
                        {
                            foreach (var drug in prescription.DrugList)
                            {
                                @drug <br/>
                            }
                        }
                    </td>
                    <td>@prescription.DateIssued.ToShortDateString()</td>
                    <td>@prescription.DosageInfo</td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Only show the "Add New Prescription" button if user is a Doctor -->
@if (isDoctor)
{
    <a asp-controller="Prescription" asp-action="Create" class="btn btn-primary">
        Add New Prescription
    </a>
}
else
{
    <p>You do not have permission to add new prescriptions.</p>
}
