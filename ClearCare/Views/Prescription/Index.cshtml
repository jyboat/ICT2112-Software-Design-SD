@model List<ClearCare.Models.PrescriptionModel>
@{
    ViewData["Title"] = "Prescriptions";
    // Example role check; adjust to your own logic
    bool isDoctor = (HardcodedUUIDs.UserRole == "Doctor");
}

<h1>Prescription List</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Patient ID</th>
            <th scope="col">Doctor ID</th>
            <th scope="col">Medications</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PatientId</td>
                <td>@item.DoctorId</td>
                <td>
                    <ul class="mb-0">
                        @foreach (var med in item.Medications)
                        {
                            <li>
                                <strong>Drug:</strong> @med.DrugName,
                                <strong>Dosage:</strong> @med.Dosage
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (isDoctor)
{
    <a asp-controller="Prescription" asp-action="Create" class="btn btn-primary">
        Add New Prescription
    </a>
}
else
{
    <p>You do not have permission to add new prescriptions.</p>
}
