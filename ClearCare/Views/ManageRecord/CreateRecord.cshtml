@{
    ViewData["Title"] = "Create Medical Record";
    var timestamp = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss"); // System timestamp
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/medicalRecords.css">
</head>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3"> 
                <div class="card-header bg-gradient bg-primary text-white p-4">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning text-center mb-4">
                        <strong>Disclaimer:</strong><br>Ensure all fields are filled correctly.
                    </div>

                    <!-- Toastr Message-->
                    <input type="hidden" id="ToastrSuccessMessage" value="@TempData["SuccessMessage"]" />
                    <input type="hidden" id="ToastrErrorMessage" value="@TempData["ErrorMessage"]" />

                    <form method="post" asp-controller="ManageRecord" asp-action="CreateMedicalRecord"
                    enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control shadow-sm" id="patientID" name="patientID"
                                        placeholder="Enter Patient ID" required>
                                    <label for="patientID" class="bi bi-fingerprint me-1"> Patient ID</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <textarea class="form-control shadow-sm" id="doctorNote" name="doctorNote" rows="4"
                                        placeholder="Enter doctor's notes..." required></textarea>
                                    <label for="doctorNote" class="bi bi-card-text me-1"> Doctor Note</label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="attachment" class="bi bi-file-earmark-image me-1"> CT Scan / Print (Optional)</label>
                                <input type="file" class="form-control shadow-sm" id="attachment" name="attachment"
                                    accept="image/*,application/pdf">
                            </div>
                            <button type="submit" class="btn btn-primary w-100 py-2 shadow">Create Record</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
