@{
    ViewData["Title"] = "Create Medical Record";
    var timestamp = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss"); // System timestamp
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/medicalRecords.css">
</head>

<div class="container py-5">
    <div class="mx-auto card shadow-lg border-0 rounded-3" style="max-width: 600px;">
        <div class="text-dark p-4">
            <h2 class="text-center mb-0">@ViewData["Title"]</h2>
        </div>

         <div class="card-body p-4">
            <div class="alert alert-warning text-center mb-4">
                <strong>Disclaimer:</strong><br>Ensure all fields are filled correctly.
            </div>

            <form method="post" asp-controller="ManageRecord" asp-action="CreateMedicalRecord"
            enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="patientID" class="form-label fw-semibold">Patient ID</label>
                    <input type="text" class="form-control shadow-sm" id="patientID" name="patientID"
                        placeholder="Enter Patient ID" required>
                </div>

                <div class="mb-3">
                    <label for="doctorNote" class="form-label fw-semibold">Doctor Note</label>
                    <textarea class="form-control shadow-sm" id="doctorNote" name="doctorNote" rows="4"
                        placeholder="Enter doctor's notes..." required></textarea>
                </div>

                <div class="mb-3">
                    <label for="attachment" class="form-label fw-semibold">CT Scan / Print (Optional)</label>
                    <input type="file" class="form-control shadow-sm" id="attachment" name="attachment"
                        accept="image/*,application/pdf">
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 shadow">Create Record</button>
            </form>
         </div>
    </div>
</div>