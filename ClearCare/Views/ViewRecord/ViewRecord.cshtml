@{
    ViewData["Title"] = "Medical Records";
    var userRole = Context.Session.GetString("Role");
    var medicalRecords = ViewData["MedicalRecords"] as List<dynamic>;
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    @if (userRole == "Doctor")
    {
        <div class="d-flex justify-content-end mb-3">
            <a class="btn btn-success" asp-controller="ManageRecord" asp-action="DisplayCreateRecord">
                <i class="bi bi-plus-circle"></i> Create Medical Record
            </a>
        </div>
    }

    @model List<ClearCare.Models.Entities.MedicalRecord>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Medical Records Overview</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Medical Record ID</th>
                        <th>Patient ID</th>
                        <th>Created By</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in medicalRecords)
                    {
                        <tr>
                            <td>@record.MedicalRecordID</td>
                            <td>@record.PatientID</td>
                            <td>@record.CreatedBy</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Record Actions">
                                    <a href="/ViewRecord/@record.RecordID" class="btn btn-outline-info me-2">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a href="/ManageRecord/@record.RecordID" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil-square"></i> Update
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
