@{
    var record = ViewData["RecordDetails"] as dynamic;
}

<h2 class="text-center my-4">Medical Record Details</h2>

<div class="container">
    <div class="card shadow-lg p-4">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="table-light">Medical Record ID</th>
                    <td>@record?.MedicalRecordID</td>
                </tr>
                <tr>
                    <th class="table-light">Patient ID</th>
                    <td>@record?.PatientID</td>
                </tr>
                <tr>
                    <th class="table-light">Created By</th>
                    <td>@record?.CreatedBy</td>
                </tr>
                <tr>
                    <th class="table-light">Date</th>
                    <td>@(((Google.Cloud.Firestore.Timestamp)record?.Date).ToDateTime().ToLocalTime().ToString("dd MMMM yyyy, hh:mm tt"))</td>
                </tr>
                <tr>
                    <th class="table-light">Doctor Note</th>
                    <td>@record?.DoctorNote</td>
                </tr>
                <tr>
                    <th class="table-light">Attachment</th>
                    <td>
                        @if (record?.HasAttachment)
                        {
                            <a href="/ViewRecord/ViewAttachment/@record?.MedicalRecordID" class="btn btn-outline-primary btn-sm" target="_blank">
                                <i class="bi bi-paperclip"></i> @record?.AttachmentName
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">
                                <i class="bi bi-x-circle-fill text-danger"></i> No Attachment
                            </span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <h2 class="text-center my-4">Filed Erratums</h2>
    @if (ViewData["Erratums"] is List<dynamic> erratums && erratums?.Count > 0)
    {
    <div class="card shadow-lg p-4">
        <table class="table table-bordered mt-3">
            <thead class="table-light">
                <tr>
                    <th>Erratum ID</th>
                    <th>Filed By</th>
                    <th>Date Filed</th>
                    <th>Details</th>
                    <th>Attachment</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewData["Erratums"] is List<dynamic> erratumsList)
                {
                    @foreach (var erratum in erratumsList)
                    {
                        <tr>
                            <td>@erratum.ErratumID</td>
                            <td>@erratum.CreatedBy</td>
                            <td>@(((Google.Cloud.Firestore.Timestamp)erratum.Date).ToDateTime().ToLocalTime().ToString("dd MMMM yyyy, hh:mm tt"))</td>
                            <td>@erratum.ErratumDetails</td>
                            <td>
                                @if (erratum?.HasErratumAttachment)
                                {
                                    <a href="/ViewRecord/ViewErratumAttachment/@erratum?.ErratumID" class="btn btn-outline-secondary btn-sm" target="_blank">
                                        <i class="bi bi-paperclip"></i> @erratum?.ErratumAttachmentName
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="bi bi-x-circle-fill text-danger"></i> No Attachment
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    }
    else
    {
        <div class="alert alert-info mt-3">
            No erratums have been filed for this medical record.
        </div>
    }

    <div class="pt-4">
        <!-- Export Button -->
        <a href="/ViewRecord/Export/@record?.MedicalRecordID" class="btn btn-primary">Export Record</a>
        
        <!-- Back Button -->
        <a href="/ViewRecord" class="btn btn-secondary">Back to Records</a>
    </div>
</div>